<!DOCTYPE html>
<html lang="en">
  <!-- HEAD -->
  <%- include('./partials/head.ejs') %>

  <body>
    <!-- NAV -->
    <%- include('./partials/nav.ejs') %>
    <!-- /NAV -->
    <div class="container">
      <h4>Item Detail</h4>
      <div>
        <h5>Name: <%= item.name %></h5>
        <h5>Price: <%= item.price %></h5>
      </div>
      <a data-id="<%=item._id%>" href="" class="delete btn" id="deleteBtn"
        >Delete</a
      >
    </div>
    <script>
      deleteBtn.onclick = (e) => {
        e.preventDefault();
        const id = deleteBtn.dataset.id;
        // const id = e.target.getAttribute('data-id')
        console.log(id);
        const endpoint = `/items/${id}`;
        fetch(endpoint, {
          method: "DELETE",
        })
          .then(res => res.json())
          .then(data => {
            console.log('data', data)
            window.location.href = data.redirect
          })
          .catch(err => console.log(err));
      };
    </script>
  </body>
</html>
