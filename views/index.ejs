<!DOCTYPE html>
<html lang="en">
  <!-- HEAD -->
  <%- include('./partials/head.ejs') %> 

  <body>
    <!-- NAV -->
    <%- include('./partials/nav.ejs') %> 
    <!-- /NAV -->
    <div class="container">
      <ul class="collection with-header">
        <% if (items.length > 0) { %>
          <% items.forEach(item => { %>
            <li class="collection-item">
              <div><%= item.name %><%= item.price %><a href="#!" class="secondary-content"><i class="material-icons">send</i></a></div>
            </li>
          <% }) %>
        <% } else { %>
        <li>There are no items</li>
        <% } %>
      </ul>
    </div>
  </body>
</html>
